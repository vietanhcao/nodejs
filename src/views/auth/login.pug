extends ../layouts/main-layout.pug 
block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/auth.css")
block content
  main
    if errorMessage
      .user-message.user-message--error #{errorMessage}
    form.login-form(action=("/login"), method="POST") 
      .form-control
        label(for="email")  E-mail
        input(class=(validationError.email ? 'invalid': '') type="email", name="email" value=oldInput.email)#email
      .form-control
        label(for="password") Password
        input(class=(validationError.password ? 'invalid': '')  type="password", name="password" value=oldInput.password)#password
      input(type="hidden", name="_csrf", value=csrfToken)
      button.btn(type="submit") Login 
    .centered
      a(href="/reset") Reset Password
